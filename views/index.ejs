<!DOCTYPE html>
<html>
<head>
  <title>Баг-трекер</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <div class="container">
    <h1 class="mt-4">Список багов</h1>
    <a class="btn btn-primary mb-3" href="/new">Добавить баг</a>
    <ul class="list-group">
      <% if (bugs && bugs.length > 0) { %>
        <% bugs.forEach(bug => { %>
          <li class="list-group-item">
            <strong><%= bug.title %></strong> - <%= bug.status %>
            <% if (bug.status === 'open') { %>
              <form class="mt-2" method="POST" action="/close/<%= bug.id %>">
                <button class="btn btn-sm btn-danger" type="submit">Закрыть</button>
              </form>
            <% } %>
            <p class="mt-2"><%= bug.description %></p>
            <% if (bug.screenshot) { %>
              <div class="mt-2">
                <img src="<%= bug.screenshot %>" alt="Скриншот" style="max-width: 300px; max-height: 200px;">
              </div>
            <% } %>
          </li>
        <% }); %>
      <% } else { %>
        <li class="list-group-item">Нет багов. Добавьте новый баг.</li>
      <% } %>
    </ul>
  </div>
</body>
</html>
